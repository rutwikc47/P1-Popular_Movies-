<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:divider="?android:attr/dividerHorizontal"
    android:orientation="horizontal"
    android:showDividers="middle"
    tools:context="rccorp.movies.MasterDetailFlow.MoviePosterListActivity"
    android:background="#000000">

    <!--
    This layout is a two-pane layout for the MoviePosters
    master/detail flow.
    
    -->

    <fragment
        android:id="@+id/movieposter_list"
        android:name="rccorp.movies.MasterDetailFlow.MoviePosterListFragment"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        />

    <FrameLayout
        android:id="@+id/movieposter_detail_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3" />

</LinearLayout>
